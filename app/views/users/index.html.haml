%div{ class: 'bg-gray-50 max-w-full max-h-full bg-no-repeat bg-cover flex flex-col text-gray-800 px-20' }
  - if user_signed_in?
    %div{ class: 'pt-20 w-full flex flex-col gap-10 flex flex-col items-center justify-center'}
      %div{ class: 'flex flex-col gap-3 items-center'}
        %h1{ class: 'text-3xl' } #{@name}
        %h2{ class: 'text-base' } Member since #{@join_date}
      %div{ class: 'items-center justify-center text-center w-full flex gap-32 py-10 pb-20 border-b border-t border-solid border-gray-300 outline-none text-sm rounded bg-white rounded drop-shadow-2xl'}
        %div{ class: 'flex flex-col gap-4'}
          %h3{ class: 'text-3xl'} Balance
          %h3{ class: 'text-4xl'}= "PHP #{@balance}"
        %div{ class: 'flex flex-col gap-4' }
          %h3{ class: 'text-3xl'} Revenue
          %h3{ class: 'text-4xl'}= "PHP #{total_revenue(@holdings)}"
      %button{ class: 'px-8 py-2 text-base font-bold bg-gray-800 opacity-70 rounded text-white w-80 transition-ease duration-150 hover:cursor-pointer hover:opacity-100' }= link_to "Change Password", edit_user_registration_path    
      %div{ class: 'items-center justify-center text-center w-full flex gap-32 py-10 pb-20 border-b border-t border-solid border-gray-300 outline-none text-sm rounded bg-white rounded drop-shadow-2xl'}
        %div{ class: 'flex flex-col gap-4 items-center' }
          %h3{ class: 'text-3xl', id: 'Div1'}
            = @randomJoke[:data]["setup"]
          %h3{ class: 'text-3xl hidden', id: 'Div2'}
            = @randomJoke[:data]["delivery"]
          -# %a{href: "#", onclick: "this.style.backgroundColor='#009900';this.style.color='#FFFFFF';event.preventDefault();"} Paint it green
          %button{class: 'px-8 py-2 text-base font-bold bg-gray-800 opacity-70 rounded text-white w-80 transition-ease duration-150 hover:cursor-pointer hover:opacity-100', onclick: "switchVisible();"}
            Show Joke
          %a{href: "#", onclick: "", class: 'px-8 py-2 text-base font-bold bg-gray-800 opacity-70 rounded text-white w-80 transition-ease duration-150 hover:cursor-pointer hover:opacity-100'} New Joke
  - else
    %div{ class: 'pt-20 w-full flex flex-col gap-10 flex flex-col items-center justify-center'}
      %div{ class: 'flex flex-col gap-3 items-center'}
        %h1{ class: 'text-3xl' }You are signed out


:javascript
  function switchVisible() {
    if (document.getElementById('Div1')) {
      if (document.getElementById('Div1').style.display == 'none') {
        document.getElementById('Div1').style.display = 'block';
        document.getElementById('Div2').style.display = 'none';
      }
      else {
        document.getElementById('Div1').style.display = 'none';
        document.getElementById('Div2').style.display = 'block';
      }
    }
  }